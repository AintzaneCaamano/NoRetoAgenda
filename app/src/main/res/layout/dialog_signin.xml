<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DialogListView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtV_BaseDialog_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_ChangePass"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtTxt_BaseDialog_OldPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/Bar_OldPass"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtTxt_BaseDialog_NewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="@string/Bar_NewPass"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edtTxt_BaseDialog_NewPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="@string/Bar_NewPass"
        android:inputType="textPassword" />
</LinearLayout>